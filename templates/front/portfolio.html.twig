{% extends "front/layout/layout.html.twig" %}

{% block stylesheets %}
    {{ encore_entry_link_tags('front') }}
    {#<link href="https://fonts.googleapis.com/css?family=Montserrat:100,200,300" rel="stylesheet">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" 
        integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" 
        crossorigin="anonymous"/>#}
{% endblock %}

{% block body %}

    <!-- TOGGLE MENU
    ==============================-->
    {% include "front/layout/header.html.twig" %}

    <!-- OTOKTONE
    ==============================-->

    <div id="otoktone" class="w-100">
        <h1 class="m-5 text-uppercase text-white">Otoktone || Portfolio</h1>
        
        <div id="skew">
            <div id="post-tableau" class="w-85 m-5 text-white">
            {% for post in posts %}
                <div class="portfolio-otoktone">
                    <img class="img-portfolio img-fluid" src="{{ asset('uploads/images/' ~ post.image) }}" alt="">
                    <h2 class="text-uppercase">{{ post.title }}</h2>
                    <p>{{ post.content }}</p>
                    <button type="button" class="btn btn-info m-4"><a class="" 
                        href="#">Site</a>
                    </button>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('front') }}
{% endblock %}