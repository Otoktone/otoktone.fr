        crossorigin="anonymous"/>#}
{% endblock %}

{% block body %}

    <!-- TOGGLE MENU
    ==============================-->
    {% include "front/layout/header.html.twig" %}

    <!-- OTOKTONE
    ==============================-->

    <div id="contact" class="w-100">
        <h1 class="m-5 text-uppercase text-white">Otoktone || Contact</h1>
        
        <div class="contact-container">
            <div class="left-col"></div>
            <div class="right-col">
                <div class="theme-switch-wrapper">
            </div>

            <h2>Me contacter</h2>
            <p>Laisser vos coordonnées et je vous recontacte dès que possible !</p>

            {{ form_start(contact_form) }}
            {{ form_widget(contact_form) }}
            <input id="submit-button" type="submit" value="Envoyer" />
            {{ form_end(contact_form) }}
            
            {% include 'flash_message.html.twig' %}
        </div>

    </div>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('front') }}
{% endblock %}