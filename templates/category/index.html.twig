{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('back') }}
{% endblock %}

{% block body %}

{% include "back/sidebar.html.twig" %}

    <section id="wrapper">
        <nav class="navbar navbar-expand-md">
            <div class="container-fluid mx-2">
            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#toggle-navbar" aria-controls="toggle-navbar" aria-expanded="false" aria-label="Toggle navigation">
                <i id="navbar-toggler" class="fas fa-bars text-white"></i>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="toggle-navbar">
                <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a id="test" class="nav-link" href="#">
                    <i data-show="show-side-navigation1" class="fa fa-bars show-side-btn"></i>
                    </a>
                </li>
                </ul>
            </div>
            </div>
        </nav>

        <div class="p-4">
            <div class="welcome">
            <div class="content rounded-3 p-3">
                <h1 class="fs-3">Otoktone | Liste des catégories</h1>
                <p class="mb-0">Tableau de bord</p>
            </div>
            </div>
            <div class="float-left m-4">
                <button type="button" class="btn btn-info"><a class="" href="{{ path('category_new') }}">Nouveau</a></button>
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>Catégorie</th>
                        <th>Slug</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>{{ category.name }}</td>
                            <td>{{ category.slug }}</td>
                            <td>
                                <a href="{{ path('category_show', {'id': category.id}) }}">
                                <i class="fas fa-eye fa-fw"></i>
                                </a>
                                <a href="{{ path('category_edit', {'id': category.id}) }}">
                                <i class="fas fa-pencil-alt fa-fw"></i>
                                </a>
                                <a href="{{ path('category_delete', {'id': category.id}) }}" 
                                onclick="return confirm('Etes-vous sure ?')">
                                <i class="fas fa-trash-alt fa-fw"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="float-right m-4">
                <button type="button" class="btn btn-info"><a class="" href="{{ path('admin') }}">Retour</a></button>
            </div>
        </div>



    </section>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('back') }}
{% endblock %}
